<?php
$name = $_POST['name'];
$email = $_POST['email'];
$course = $_POST['course'];


$xml = new DOMDocument();
$xml->load('test1.xml');

$root = $xml->getElementsByTagName('tariner_List')->item(0);
 
$tariner = $xml->createElement('tariner');
$tariner->appendChild($xml->createElement('name', $name));
$tariner->appendChild($xml->createElement('email' ,$email));
$tariner->appendChild($xml->createElement('course', $course));

$root->appendChild($tariner);
$xml->save('test1.xml');

?>
